<style>
  html,
  body {
    height: 100%;
  }

  body {
    display: flex;
    align-items: center;
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

  .form-signin {
    max-width: 330px;
    padding: 15px;
  }

  .form-signin .form-floating:focus-within {
    z-index: 2;
  }

  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
</style>

<main class="form-signin w-100 m-auto text-center">
  <%= image_tag("mockr.svg", height: 70, class: "mb-5") %>

  <% auth_providers.each do |provider| %>
    <%= form_tag("/auth/#{provider[:name]}", method: "post", data: { turbo: false }, class: "mb-2") do %>
      <button type="submit" class="w-100 btn btn-lg btn-primary">
        <i class="bi bi-<%= provider[:icon] %> me-1"></i>
        Login with <%= provider[:title] %>
      </button>
    <% end %>
  <% end %>
</main>
