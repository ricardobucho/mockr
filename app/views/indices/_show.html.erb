<%= turbo_frame_tag "modal" do %>
  <%= render "shared/modal_content", title: "Index Template" do %>
    <div class="d-flex align-items-center gap-2 mb-3">
      <span class="text-muted"><%= @index.request.client.name %></span>
      <i class="bi bi-chevron-right text-muted small"></i>
      <span class="text-muted"><%= @index.request.name %></span>
      <i class="bi bi-chevron-right text-muted small"></i>
      <span class="fw-medium"><%= @index.name %></span>
    </div>
    
    <%= render Manage::Fields::CodeViewerComponent.new(
      code: @index.template,
      language: :erb
    ) %>
  <% end %>
<% end %>
