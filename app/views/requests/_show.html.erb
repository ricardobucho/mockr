<%= turbo_frame_tag "modal" do %>
  <%= render "shared/modal_content", title: "Request Logs" do %>
    <div class="d-flex align-items-center gap-2 mb-3">
      <span class="text-muted"><%= @request.client.name %></span>
      <i class="bi bi-chevron-right text-muted small"></i>
      <span class="fw-medium"><%= @request.name %></span>
    </div>
    
    <% if @logs.empty? %>
      <div class="empty-state py-4">
        <i class="bi bi-journal-x empty-state-icon"></i>
        <div class="empty-state-title">No logs yet</div>
        <p class="mb-0">Logs will appear here after requests are made.</p>
      </div>
    <% end %>
    
    <div class="d-flex flex-column gap-3">
      <% @logs.each do |log| %>
        <div class="log-entry">
          <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
            <span class="text-mono small text-muted">#<%= log["id"] %></span>
            <span class="small text-muted"><%= log["created_at_formatted"] %></span>
          </div>
          
          <div class="row g-3">
            <div class="col-12">
              <div class="small fw-medium text-muted mb-1">Request</div>
              <div class="d-flex flex-wrap gap-2 small">
                <% if log["request_ip?"] %>
                  <span class="badge badge-condition">IP: <%= log["request_ip"] %></span>
                <% end %>
                <% if log["request_user_agent?"] %>
                  <span class="badge badge-condition text-truncate" style="max-width: 300px;">
                    Agent: <%= log["request_user_agent"] %>
                  </span>
                <% end %>
              </div>
              <% if log["request_query_params?"] %>
                <div class="d-flex flex-wrap gap-1 mt-2">
                  <% log["request_query_params"].each do |key, value| %>
                    <span class="badge badge-condition"><%= key %>: <%= value %></span>
                  <% end %>
                </div>
              <% end %>
              <% if log["request_body_params?"] %>
                <div class="d-flex flex-wrap gap-1 mt-2">
                  <% log["request_body_params"].each do |key, value| %>
                    <span class="badge badge-condition"><%= key %>: <%= value %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <div class="col-12">
              <div class="small fw-medium text-muted mb-1">Response</div>
              <div class="d-flex flex-wrap gap-2 small">
                <span class="badge badge-condition"><%= log["response_name"] %></span>
                <span class="badge badge-condition">Status: <%= log["response_status"] %></span>
                <% if log["response_throttle"].to_i > 0 %>
                  <span class="badge badge-condition">Throttle: <%= log["response_throttle"] %>ms</span>
                <% end %>
              </div>
              <% if log["response_headers?"] %>
                <div class="d-flex flex-wrap gap-1 mt-2">
                  <% log["response_headers"].each do |key, value| %>
                    <span class="badge badge-condition"><%= key %>: <%= value %></span>
                  <% end %>
                </div>
              <% end %>
              <% if log["response_conditions?"] %>
                <div class="d-flex flex-wrap gap-1 mt-2">
                  <% log["response_conditions"].each do |key, value| %>
                    <span class="badge badge-condition"><%= key %>: <%= value %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
