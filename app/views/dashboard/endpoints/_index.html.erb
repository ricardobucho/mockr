<div class="col">
  <div class="card nested-card">
    <div class="card-header">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="bi bi-collection text-muted"></i>
          <span><%= index.name %></span>
        </div>
        <div class="d-flex align-items-center gap-1">
          <% if current_user.manager? %>
            <%= link_to edit_manage_index_path(index), class: "btn btn-action btn-outline-secondary", data: { turbo_frame: "drawer", bs_toggle: "tooltip", bs_title: "Edit" } do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          <% end %>
          <a
            href="<%= show_index_path(index.id) %>"
            class="btn btn-action btn-outline-secondary"
            data-bs-toggle="tooltip"
            data-bs-title="View"
            data-turbo-frame="drawer"
          >
            <i class="bi bi-box-arrow-up-right"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="card-body">
      <span class="method-badge method-<%= request.method.downcase %>"><%= request.method %></span>
      <span class="endpoint-path ms-2">
        /<%= client.slug %><%= index.path unless index.path == "/" %>
      </span>
    </div>
  </div>
</div>
