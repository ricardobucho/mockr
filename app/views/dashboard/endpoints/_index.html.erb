<div class="col">
  <div class="card nested-card">
    <div class="card-header">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="bi bi-collection text-muted"></i>
          <span><%= index.name %></span>
        </div>
        <div class="d-flex align-items-center gap-1">
          <% if current_user.manager? %>
            <div class="btn-group btn-group-actions" role="group">
              <a
                href="<%= avo.resources_index_path(index.id) %>"
                class="btn btn-action btn-outline-secondary"
                target="_blank"
                data-bs-toggle="tooltip"
                data-bs-title="View"
              >
                <i class="bi bi-eye"></i>
              </a>
              <a
                href="<%= avo.edit_resources_index_path(index.id) %>"
                class="btn btn-action btn-outline-secondary"
                target="_blank"
                data-bs-toggle="tooltip"
                data-bs-title="Edit"
              >
                <i class="bi bi-pencil"></i>
              </a>
            </div>
          <% end %>
          <a
            href="<%= show_index_path(index.id) %>"
            class="btn btn-action btn-outline-secondary"
            data-bs-toggle="tooltip"
            data-bs-title="View Template"
            data-turbo-frame="modal"
          >
            <i class="bi bi-code-slash"></i>
          </a>
        </div>
      </div>
    </div>
    <div class="card-body">
      <span class="method-badge method-<%= request.method.downcase %>"><%= request.method %></span>
      <span class="endpoint-path ms-2">
        /<%= client.slug %><%= index.path unless index.path == "/" %>
      </span>
    </div>
  </div>
</div>
