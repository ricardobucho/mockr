<div class="col">
  <div class="card nested-card">
    <div class="card-header">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="bi bi-file-earmark-code text-muted"></i>
          <span><%= response.name %></span>
        </div>
        <div class="d-flex align-items-center gap-1">
          <% if current_user.manager? %>
            <div class="btn-group btn-group-actions" role="group">
              <a
                href="<%= avo.resources_response_path(response.id) %>"
                class="btn btn-action btn-outline-secondary"
                target="_blank"
                data-bs-toggle="tooltip"
                data-bs-title="View"
              >
                <i class="bi bi-eye"></i>
              </a>
              <a
                href="<%= avo.edit_resources_response_path(response.id) %>"
                class="btn btn-action btn-outline-secondary"
                target="_blank"
                data-bs-toggle="tooltip"
                data-bs-title="Edit"
              >
                <i class="bi bi-pencil"></i>
              </a>
            </div>
          <% end %>
          <a
            href="<%= show_response_path(response.id) %>"
            class="btn btn-action btn-outline-secondary"
            data-bs-toggle="tooltip"
            data-bs-title="View Body"
            data-turbo-frame="modal"
          >
            <i class="bi bi-braces"></i>
          </a>
        </div>
      </div>
    </div>
    <% if response.conditions.any? %>
      <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
          <% response.conditions.sort.each do |(key, value)| %>
            <span class="badge badge-condition"><%= key %>: <%= value %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
