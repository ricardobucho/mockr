<div class="col mb-3">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col">
          <i
            class="bi bi-file-text-fill me-1"
            data-bs-toggle="tooltip"
            data-bs-title="Response"
          ></i>
          <%= response.name %>
        </div>
        <div class="col-auto">
          <div class="btn-group align-middle" role="group">
            <a
              href="<%= show_response_path(response.id) %>"
              class="btn btn-sm btn-primary"
              data-bs-toggle="tooltip"
              data-bs-title="Body"
              data-turbo-frame="modal"
            >
              <i class="bi bi-braces-asterisk"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% if response.conditions.any? %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <% response.conditions.sort.each do |(key, value)| %>
            <div>
              <span
                class="badge bg-secondary align-middle"
                data-bs-toggle="tooltip"
                data-bs-title="Condition"
              >
                <%= key %>
              </span>
              <span class="align-middle">
                <%= value %>
              </span>
            </div>
          <% end %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
