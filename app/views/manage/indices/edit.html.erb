<% stacked = turbo_frame_request_id == "drawer-stacked" || params[:stacked].present? %>
<% if stacked %>
  <%= turbo_frame_tag "drawer-stacked" do %>
    <%= render Manage::StackedDrawerComponent.new(title: "Edit Index", subtitle: @index.name) do %>
      <%= render "form", index: @index, request: @request, stacked: true %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_frame_tag "drawer" do %>
    <%= render Manage::DrawerComponent.new(title: "Edit Index", subtitle: @index.name) do %>
      <%= render "form", index: @index, request: @request, stacked: false %>
    <% end %>
  <% end %>
<% end %>
