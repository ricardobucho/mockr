    <% c.with_header_actions do %>
      <%= link_to new_manage_client_path, class: "drawer-header-action", data: { turbo_frame: "drawer" } do %>
        <i class="bi bi-plus-circle"></i> <%= t("manage.common.new") %>
      <% end %>
    <% end %>
    <%= render "index_content", clients: @clients %>
  <% end %>
<% end %>
