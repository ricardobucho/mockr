<div class="drawer-body">
  <div class="drawer-section-header">
    <%= link_to new_manage_client_path, class: "btn btn-action-primary", data: { turbo_frame: "drawer-stacked" } do %>
      <i class="bi bi-plus-lg me-1"></i>New Client
    <% end %>
  </div>

  <div class="client-list">
    <% clients.each do |client| %>
      <div class="client-list-item">
        <div class="client-list-item-info">
          <div class="client-list-item-icon">
            <i class="bi bi-ui-radios-grid"></i>
          </div>
          <div class="client-list-item-details">
            <span class="client-list-item-name"><%= client.name %></span>
            <span class="client-list-item-slug">/<%= client.slug %></span>
          </div>
        </div>
        <div class="client-list-item-actions">
          <div class="client-list-item-stats">
            <span class="client-list-item-stat" data-bs-toggle="tooltip" data-bs-title="Requests">
              <i class="bi bi-signpost-split"></i>
              <%= client.requests.size %>
            </span>
            <span class="client-list-item-stat" data-bs-toggle="tooltip" data-bs-title="Indices">
              <i class="bi bi-collection"></i>
              <%= client.indices.size %>
            </span>
            <span class="client-list-item-stat" data-bs-toggle="tooltip" data-bs-title="Responses">
              <i class="bi bi-file-earmark-code"></i>
              <%= client.responses.size %>
            </span>
          </div>
          <%= link_to edit_manage_client_path(client), class: "btn btn-sm btn-outline-secondary", data: { turbo_frame: "drawer-stacked" } do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if clients.empty? %>
      <div class="drawer-nested-empty">
        No clients found.
      </div>
    <% end %>
  </div>
</div>
